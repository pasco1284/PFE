<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="/icon.png">
    <title>Réinitialisation du mot de passe</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            height: 100vh;
            background: radial-gradient(ellipse at bottom, #0b358f 0%, #000000 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        #particles-js {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: -1;
        }

        .form-container {
            background: rgba(0, 0, 0, 0.267);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

        h2 {
            color: #ffffff;
            margin-bottom: 20px;
        }

        .form-step {
            display: none;
            flex-direction: column;
        }

        .form-step.active {
            display: flex;
        }

        input {
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            width: 100%;
            font-size: 16px;
        }

        button {
            padding: 10px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
        }

        button.next-btn {
            background: #007bff;
            color: white;
        }

        button.prev-btn {
            background: #ffffff;
            color: black;
            margin-right: 10px;
        }

        button:hover {
            opacity: 0.9;
        }
    </style>
</head>
<body>
    <div id="particles-js"></div>
    <script src="/particles.js" defer></script>
    <script src="/app-login.js" defer></script>

    <div class="form-container">
        <!-- Étape 1: Entrer l'email -->
        <form id="step-1" class="form-step active" method="POST" action="http://57.129.134.101/send_code.php">
            <h2>Étape 1 : Envoyer le code</h2>
            <input type="email" name="email" placeholder="Entrez votre e-mail" required>
            <button type="submit" class="next-btn">Suivant</button>
        </form>

        <!-- Étape 2: Vérification du code -->
        <form id="step-2" class="form-step" method="POST" action="http://57.129.134.101/verify_code.php">
            <h2>Étape 2 : Vérifier le code</h2>
            <input type="text" name="code" placeholder="Entrez le code reçu" required>
            <button type="submit" class="next-btn">Vérifier</button>
            <button type="button" class="prev-btn" onclick="prevStep(1)">Retour</button>
        </form>

        <!-- Étape 3: Changer le mot de passe -->
        <form id="step-3" class="form-step" method="POST" action="http://57.129.134.101/reset_password.php">
            <h2>Étape 3 : Nouveau mot de passe</h2>
            <input type="password" name="new_password" placeholder="Nouveau mot de passe" required>
            <input type="password" name="confirm_password" placeholder="Confirmez le mot de passe" required>
            <button type="submit" class="next-btn">Confirmer</button>
            <button type="button" class="prev-btn" onclick="prevStep(2)">Retour</button>
        </form>
    </div>
    
    <script>
        function nextStep(step) {
            document.querySelectorAll(".form-step").forEach(form => form.classList.remove("active"));
            document.getElementById(`step-${step}`).classList.add("active");
        }

        function prevStep(step) {
            document.querySelectorAll(".form-step").forEach(form => form.classList.remove("active"));
            document.getElementById(`step-${step}`).classList.add("active");
        }
    </script>
</body>
</html>
