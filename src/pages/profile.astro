---
// Importer des composants
import Header from './composants/Header.astro'; 
import Footer from './composants/Footer.astro'; 
import Menu from './composants/Menu.astro';
---

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="/icon.png">
    <title>Profil</title>
</head>
<body>
    <div id="particles-js"></div>
    <script src="/particles.js" defer></script>
    <script src="/app-login.js" defer></script>
    
    <div class="profile-menu">
      <img src="images/photo_profile.jpg" alt="Votre photo de profil" class="profile-icon" id="profileIcon" onclick="toggleMenu()">
      <div class="dropdown-menu" id="dropdownMenu" style="display: none;">
          <ul>
              <li><a href="Profile">Accéder a votre interface</a></li>
              <li><a href="home">Se déconnecter</a></li>
          </ul>
      </div>
  </div>
  

    <div class="profile-container">
        <form class="profile-form">
            <div class="profile-header">
                <img src="/chat en direct.png" alt="Photo de profil" class="profile-pic" id="profilePic">
                
                <input type="file" id="profilePicInput" style="display:none;">
                
                <label for="profilePicInput" class="upload-button">Changer la photo de profil</label>
                
                <h2 id="fullname">Nom Prénom</h2>
            </div>
            <div class="form-section">
                <label for="nom"><strong>Nom:</strong></label>
                <input type="text" id="nom" name="nom" value="Dupont" readonly>
            </div>

            <div class="form-section">
                <label for="prenom"><strong>Prénom:</strong></label>
                <input type="text" id="prenom" name="prenom" value="Jean" readonly>
            </div>

            <div class="form-section">
                <label for="role"><strong>Rôle:</strong></label>
                <input type="text" id="role" name="role" value="Étudiant" readonly>
            </div>

            <div class="form-section">
                <label for="niveau"><strong>Niveau:</strong></label>
                <input type="text" id="niveau" name="niveau" value="Intermédiaire" readonly>
            </div>

            <button type="button" id="editButton">Modifier le Profil</button>
            <button type="submit" id="saveButton" style="display:none;">Enregistrer</button>
        </form>
    </div>
    <style>
        html {
    font-size: 100%; 
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    margin: 0;
    padding: 0;
    height: 100vh;
    background: radial-gradient(ellipse at bottom, #0b358f 0%, #000000 100%);
}

#particles-js {
    height: 100%;
}

.profile-container { 
    background-color: rgba(0, 0, 0, 0.486);
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.2); 
    position: absolute;
    top: 50%;
    left: 50%;
    width: 85%; /* Ajuste selon la taille souhaitée */
    padding: 40px;
    margin: 20px auto;
    transform: translate(-50%, -55%);
    box-sizing: border-box;
    display: flex; /* Utiliser Flexbox */
    flex-direction: row; /* Organiser en ligne */
    justify-content: space-between; /* Espacement entre les éléments */
    gap: 20px;
    align-items: flex-start; /* Aligner en haut des colonnes */
}

h2#fullname {
    margin-top: 15px; 
    color: white;
}

.profile-header {
    display: flex;
    flex-direction: column;
    align-items: center; 
    margin-bottom: 30px;
}

.profile-pic {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid #ffffff;
    margin-bottom: 15px; 
}

.profile-form {
    display: flex;
    flex-direction: row; /* Organiser les sections en ligne */
    gap: 20px; 
}

.form-section {
    display: flex;
    flex-direction: column; /* Les éléments à l'intérieur des sections restent en colonne */
    flex-basis: 45%; /* Largeur relative à l'intérieur du flex container */
    border: 2px solid #ffffff;
    padding: 15px;
    border-radius: 8px;
}

label {
    font-size: 18px;
    margin-bottom: 8px;
    color: #ffffff;
}

input {
    padding: 12px; 
    font-size: 18px;
    border: none;
    outline: none;
    background-color: #f9f9f9;
    color: #000000;
}

button {
    padding: 10px 20px;
    font-size: 16px;
    border: none;
    border-radius: 5px;
    background-color: #0b358f;
    color: white;
    cursor: pointer;
    margin-top: 20px;
}

button:hover {
    background-color: #082d75;
}

.upload-button {
    display: inline-block;
    margin-top: 10px;
    padding: 10px 20px;
    font-size: 16px;
    color: white;
    background-color: #0b358f;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.upload-button:hover {
    background-color: #082d75;
}

.upload-button:active {
    background-color: #051d4c;
}

input[readonly] {
    background-color: #e0e0e0;
}

.profile-menu {
  position: absolute;
  top: 20px;
  right: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.profile-icon {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  cursor: pointer;
  border: 2px solid white;
}

.dropdown-menu {
  position: absolute;
  top: 60px;
  right: 0;
  background-color: white;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  border-radius: 5px;
  overflow: hidden;
}

.dropdown-menu ul {
  list-style: none;
  margin: 0;
  padding: 0;
}

.dropdown-menu ul li {
  padding: 10px;
  text-align: left;
}

.dropdown-menu ul li a {
  text-decoration: none;
  color: #000;
  display: block;
}

.dropdown-menu ul li:hover {
  background-color: #f0f0f0;
}

.footer-distributed{
    background: #ffffff41;
    box-shadow: 0 1px 1px 0 rgba(0, 0, 0, 0.12);
    box-sizing: border-box;
    width: 100%;
    text-align: left;
    font: bold 16px sans-serif;
    padding: 55px 50px;
    position: fixed;
      bottom: 0;
      left: 0;
  }
    </style>
    <Footer />
    <script src="/src/scripts/profile.js" defer></script>
</body>
</html>