<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interface Administrateur</title>
</head>
<body>
    <style>/* Réinitialiser les marges et les paddings de tous les éléments */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        /* Corps de la page */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            color: #333;
            line-height: 1.6;
            margin: 20px;
        }
        
        /* Titre principal */
        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #007bff;
        }
        
        /* Sections */
        section {
            margin: 20px 0;
        }
        
        /* Titre de section */
        section h2 {
            background-color: #007bff;
            color: white;
            padding: 10px;
            font-size: 1.5rem;
            border-radius: 5px;
            margin-bottom: 15px;
        }
        
        /* Tableaux */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        
        /* En-têtes des tableaux */
        table th {
            background-color: #007bff;
            color: white;
            padding: 10px;
            text-align: left;
        }
        
        /* Cellules de tableaux */
        table td {
            background-color: #fff;
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }
        
        /* Lignes alternées */
        table tr:nth-child(even) td {
            background-color: #f9f9f9;
        }
        
        /* Conteneur de la section table */
        #account-creation-logs,
        #traffic-logs,
        #file-logs,
        #conversation-logs {
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: white;
            padding: 20px;
        }
        
        /* Styles de tableau pour mobile */
        @media (max-width: 768px) {
            table {
                font-size: 14px;
            }
        
            table th, table td {
                padding: 8px;
            }
        }
        </style>
    <h1>Tableau de Bord Administrateur</h1>

    <!-- Section pour les créations de compte -->
    <section id="account-creation-logs">
        <h2>Logs de Création de Comptes</h2>
        <table>
            <thead>
                <tr>
                    <th>Utilisateur</th>
                    <th>Type de Compte</th>
                    <th>Date</th>
                    <th>IP</th>
                </tr>
            </thead>
            <tbody id="accountLogs">
                <!-- Les données seront injectées ici -->
            </tbody>
        </table>
    </section>

    <!-- Section pour le trafic entre étudiants et enseignants -->
    <section id="traffic-logs">
        <h2>Trafic Étudiant-Enseignant</h2>
        <table>
            <thead>
                <tr>
                    <th>Événement</th>
                    <th>Émetteur</th>
                    <th>Destinataire</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody id="trafficLogs">
                <!-- Les données seront injectées ici -->
            </tbody>
        </table>
    </section>

    <!-- Section pour les fichiers échangés -->
    <section id="file-logs">
        <h2>Logs de Fichiers Échangés</h2>
        <table>
            <thead>
                <tr>
                    <th>Nom de Fichier</th>
                    <th>Utilisateur</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody id="fileLogs">
                <!-- Les données seront injectées ici -->
            </tbody>
        </table>
    </section>

    <!-- Section pour les conversations -->
    <section id="conversation-logs">
        <h2>Logs de Conversations</h2>
        <table>
            <thead>
                <tr>
                    <th>Émetteur</th>
                    <th>Destinataire</th>
                    <th>Message</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody id="conversationLogs">
                <!-- Les données seront injectées ici -->
            </tbody>
        </table>
    </section>

</body>
</html>